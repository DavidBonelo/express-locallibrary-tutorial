extends layout
block content
    h1 #{title}: #{book.title}
    if book_instances.length
        p.text-danger #[strong Can't delete, there are book instances associated with this book]
        div(style='margin-top: 32px; margin-left: 32px')
            h4 Book Instances
            each book_instance in book_instances
                a(href=book_instance.url) #[strong #{book_instance.status}]
                p=book_instance.imprint
    else
        p Are you sure you want to delete the book? #{book.title}?
        form(action='' method='POST')
            div.form-group
                input#genreid.form-control(type='hidden',name='bookid',value=book._id,required='true')
            button.btn.btn-primary(type='submit') Delete it!!